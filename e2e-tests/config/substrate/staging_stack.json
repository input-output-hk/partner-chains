{
    "stack_config": {
        "ogmios_host": "staging-preview-services-service.staging-preview.svc.cluster.local",
        "ogmios_port": 1337,
        "validator_name": "staging-preview-validator-1",
        "tools": {
            "cardano_cli": {
                "cli": "cardano-cli",
                "shell": "kubectl exec -it ${stack_config[validator_name]} -c cardano-node -n staging-preview --"
            },
            "partner_chains_node": {
                "cli": "/usr/local/bin/partner-chains-node",
                "shell": "kubectl exec -it ${stack_config[validator_name]} -c substrate-node -n staging-preview --"
            },
            "bech32": {
                "cli": "bech32",
                "shell": "kubectl exec -it ${stack_config[validator_name]} -c substrate-node -n staging-preview --"
            }
        }
    }
}
