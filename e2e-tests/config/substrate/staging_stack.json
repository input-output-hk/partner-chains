{
    "stack_config": {
        "ogmios_host": "devnet-services-service",
        "ogmios_port": 1337,
        "validator_name": "staging-preview-validator-1",
        "namespace": "staging-preview",
        "tools": {
            "cardano_cli": {
                "cli": "cardano-cli",
                "shell": "kubectl exec -it staging-preview-services -c cardano-node -n staging-preview --"
            },
            "partner_chains_node": {
                "cli": "/usr/local/bin/partner-chains-node",
                "shell": "kubectl exec -it ${stack_config[validator_name]} -c substrate-node -n ${stack_config[namespace]} --"
            },
            "bech32": {
                "cli": "/tools/bech32",
                "shell": "kubectl exec -it binary-host -c binary-host -n sc --"
            }
        }
    }
}
