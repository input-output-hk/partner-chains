VERSION 0.8

FETCH:
  FUNCTION
  CACHE --sharing shared --id cargo $CARGO_HOME
  RUN --ssh cargo fetch --locked

BUILD:
  FUNCTION
  ARG --required PROFILE
  ARG --required NODE
  ARG FEATURES
  CACHE --sharing shared --id cargo $CARGO_HOME
  RUN cargo --locked chef prepare --bin $NODE
  RUN cargo --locked chef cook --profile=$PROFILE --features=$FEATURES -p $NODE
  SAVE ARTIFACT target

COMPILE_SOURCE:
  FUNCTION
  LET CRATES=$(tomlq -r .workspace.members[] Cargo.toml)
  FOR crate IN $CRATES
      COPY --dir $crate $crate
  END

COMPILE_RUNTIME:
  FUNCTION
  # calculate libary deps
  RUN ldd $NODE \
      | awk 'NF == 4 { system("echo " $3) }' \
      | tar -czf deps.tgz --files-from=-
  SAVE ARTIFACT deps.tgz deps

INSTALL:
  FUNCTION
  ARG --required NODE
  # install deps
  RUN tar -v -C / -xzf /tmp/deps.tgz \
      && rm -rf /tmp/deps.tgz

  # Sanity checks
  RUN ldd /usr/local/bin/$NODE \
      && /usr/local/bin/$NODE --version
